<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @author.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @author.email %>
</p>

<% if current_user.email == @author.email %>
<%= link_to 'Edit', edit_author_path(@author) %> |
<%= link_to 'Delete Account', author_path(@author), method: :delete, data: {confirm: "Really delete this account?"} %> |
<% end %>
<%= link_to 'Back', authors_path %> |
<%= link_to 'View Articles', root_path %><br>
<%= link_to 'Create New Account', new_author_path, class: "smallest" %>
